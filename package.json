{
  "name": "readme.com",
  "version": "0.1.3",
  "description": "Minimal website generator",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "readme.com": "./dist/build.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "test": "vitest --config vite.test.config.ts",
    "lint": "eslint ./src --ext .js,.jsx,.ts,.tsx",
    "build:site": "rm -rf out && node ./dist/build.mjs --outputPath ./out",
    "dev:site": "pnpx concurrently 'pnpx serve out' 'pnpx nodemon --watch readme.md --ext js,ejs --watch src --exec pnpm build:site'"
  },
  "keywords": [
    "markdown",
    "static-generator"
  ],
  "homepage": "https://github.com/moonwave99/readme.com",
  "author": {
    "name": "Diego Caponera",
    "email": "hello@diegocaponera.com",
    "url": "https://www.diegocaponera.com"
  },
  "license": "ISC",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "ejs": "^3.1.9",
    "fs-extra": "^11.1.1",
    "globby": "^13.2.2",
    "gray-matter": "^4.0.3",
    "marked": "^7.0.5",
    "marked-gfm-heading-id": "^3.0.6",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.2",
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^10.0.1",
    "@moonwave99/test-fs": "^0.0.5",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^25.3.0",
    "@types/yargs": "^17.0.35",
    "@typescript-eslint/eslint-plugin": "^8.56.0",
    "@typescript-eslint/parser": "^8.56.0",
    "eslint": "^10.0.1",
    "tsdown": "^0.20.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
