{
  "name": "readme.com",
  "version": "0.0.12",
  "description": "Minimal website generator",
  "main": "index.js",
  "type": "module",
  "bin": {
    "readme.com": "./bin/build.js"
  },
  "files": [
    "bin",
    "src",
    "assets"
  ],
  "scripts": {
    "test": "npx vitest --config vite.test.config.js",
    "build:site": "rm -rf dist && node ./bin/build.js",
    "dev:site": "npx concurrently 'npx serve dist' 'npx nodemon --watch readme.md --ext js,ejs --watch src --exec npm run build:site'"
  },
  "keywords": [
    "markdown",
    "static-generator"
  ],
  "homepage": "https://github.com/moonwave99/readme.com",
  "author": {
    "name": "Diego Caponera",
    "email": "hello@diegocaponera.com",
    "url": "https://www.diegocaponera.com"
  },
  "license": "ISC",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "ejs": "^3.1.9",
    "fs-extra": "^11.1.1",
    "globby": "^13.2.2",
    "gray-matter": "^4.0.3",
    "marked": "^7.0.5",
    "marked-gfm-heading-id": "^3.0.6",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@moonwave99/test-fs": "^0.0.5",
    "vitest": "^3.2.4"
  }
}
